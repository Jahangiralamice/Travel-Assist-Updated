@model TouristPlace.Models.ToristPlace
@{
    ViewBag.Title = "New Tourist Place Entry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    textarea{
        max-width:100%;
    }

    #Description{
        width: 280px;
    }
    
    /*input{
        width:100%;
    }*/
</style>
@using (Html.BeginForm("NewTouristPlace", "home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4 style="font-weight:bold;">Add New Tourist Place</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading bg-success">New Tourist Place</div>
                <div class="panel-body">

                    <table class="table table-bordered table-responsive">
                        <tbody>
                            <tr>
                                <td> @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })</td>
                                <td>
                                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                </td>
                            </tr>

                            <tr>
                                <td> @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label" })</td>
                                <td>
                                    @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control"} })
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    @*@Html.LabelFor(model => model.PlaceImage, htmlAttributes: new { @class = "control-label " })*@
                                    <label for="PlaceImage">Place Image</label>
                                </td>
                                <td>
                                    <input type="file" name="PlaceImage" required />
                                    @Html.ValidationMessageFor(model => model.PlaceImage, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <input type="submit" value="Create" class="btn btn-primary pull-right" />
                                    @Html.ActionLink("Back to List", "MyPlaces", "Home", new { area = "" }, new { @class = "btn btn-warning" })
                                </td>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
        <div class="col-lg-2"></div>
    </div>



</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
